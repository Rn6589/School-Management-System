@model List<School_Management_System.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>


<a asp-controller="Courses" asp-action="Create" class="btn btn-primary">Add Course</a>
<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Name</th>
            <th>Description</th>
            <th></th> <!-- column for the Edit and delete button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.CourseId</td>
                <td>@student.Name</td>
                <td>@student.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.CourseId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.CourseId" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

